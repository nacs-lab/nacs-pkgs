pkgname=nacs-boot
pkgver=1.0
pkgrel=2
pkgdesc='Boot files for NaCs computer control'
arch=('armv7h')
url="http://github.com/nacs-lab"
license=('GPL2')
source=(system.bit.bin
  boot.bin
  uEnv.txt)
md5sums=('9b81dbd18bb102930db254bd149c61ec'
         '3841f85a78b703575f0512e6f41ef080'
         '0229d4d2a56918304dd7d5bf5f83c595')
options=('!strip')
backup=('boot/uEnv.txt')

package() {
  install -dm755 "${pkgdir}/boot/"
  install -Dm644 system.bit.bin boot.bin uEnv.txt "${pkgdir}/boot/"
}
